                                      attributeName="transform"
                                      type="rotate"
                                      from="0 20 20"
                                      to="360 20 20"
                                      dur="0.5s"
                                      repeatCount="indefinite"/>
                </path>
  </svg>
        </div>
        <div class="modal-content">
        </div>

            <a href="#" class="modal-action modal-close btn-flat waves-effect waves-light">
                <i class="material-icons">close</i>
            </a>

    </div>



    <section class="post_container container">
        <div class="row">
            <div class="post_wrapper col l12">
                <div class="row">
                    {% for post in posts %}
                        {% set tabfruit = [] %}
                        {% for t in post.tags %}
                            {% set tabfruit = tabfruit|merge([t.name]) %}
                        {% endfor %}

                        <div class="item col l1 open-modal content-c{{ post.id }}" data-tags="{{ tabfruit|join(',') }}" data-id="{{ post.id }}">

                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <aside class=""></aside>

    {#<div class="row">#}
        {#<div>#}
            {#{% if post.image is not null %}#}
                {#{% if post.iSinstagram is null %}#}
                    {#<img class="post_image col s12" src="{{ asset('/upload/media/low_resolution/' ~ post.image.name) }}"/>#}
                {#{% else %}#}
                    {#<img class="post_image col s12" src="{{ post.image.url }}"/>#}
                {#{% endif %}#}
            {#{% endif %}#}
        {#</div>#}
        {#<div class="col s12">{{ post.caption.text|raw }}</div>#}
    {#</div>#}
